{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],

    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        //"strict": true /* Enable all strict type-checking options. */,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,

        "skipLibCheck": true /* Skip type checking all .d.ts files. */,
        "sourceMap": true
        //"lib": ["DOM"]
    }
}
