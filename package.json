{
    "name": "web-chat",
    "version": "1.0.0",
    "description": "YP web messenger",
    "author": "",
    "license": "ISC",
    "private": true,
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "engines": {
        "node": ">=16.13.0"
    },
    "scripts": {
        "start:dev": "parcel ./src/index.html --open --no-cache",
        "build": "parcel build ./src/pages/*.pug --public-url ./",
        "start": "npm install && npm run build && node ./server.js",
        "tsc": "tsc --noEmit",
        "lint:dry": "eslint ./src/**/*.ts",
        "lint:fix": "npm run lint:dry -- --fix",
        "stylelint:dry": "stylelint 'src/**/*.css' --formatter verbose",
        "stylelint:fix": "npm run stylelint:dry -- --fix",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.(ts|tsx)": [
            "npm run lint:fix"
        ],
        "*.css": [
            "npm run stylelint:fix"
        ]
    },
    "dependencies": {
        "express": "4.17.2",
        "nanoid": "3.3.1"
    },
    "devDependencies": {
        "@parcel/transformer-pug": "2.2.1",
        "@prettier/plugin-pug": "1.19.2",
        "@typescript-eslint/eslint-plugin": "5.12.0",
        "@typescript-eslint/parser": "5.12.0",
        "autoprefixer": "10.4.2",
        "eslint": "8.9.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-prettier": "8.4.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "7.0.4",
        "lint-staged": "12.3.4",
        "parcel": "2.2.1",
        "parcel-transformer-pug-precompile": "1.0.6",
        "postcss": "8.4.6",
        "postcss-custom-properties": "12.1.4",
        "postcss-import": "14.0.2",
        "postcss-mixins": "9.0.1",
        "postcss-nested": "5.0.6",
        "postcss-url": "10.1.3",
        "prettier": "2.5.1",
        "stylelint": "14.5.1",
        "stylelint-config-prettier": "9.0.3",
        "stylelint-config-standard": "25.0.0",
        "typescript": "4.5.5"
    }
}
